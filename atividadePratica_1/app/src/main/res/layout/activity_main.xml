<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jokenp_gabrielle_fonseca"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="32dp" />

    <!-- Espaço entre o título e os ícones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="48dp">

        <!-- Tesoura com fundo verde -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:background="@android:color/holo_green_light">

            <ImageButton
                android:id="@+id/btnTesoura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tesoura"
                android:contentDescription="@string/tesoura"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
        </FrameLayout>

        <!-- Pedra com fundo amarelo -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:background="@android:color/holo_orange_light">

            <ImageButton
                android:id="@+id/btnPedra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pedra"
                android:contentDescription="@string/pedra"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
        </FrameLayout>

        <!-- Papel com fundo azul -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:background="@android:color/holo_blue_light">

            <ImageButton
                android:id="@+id/btnPapel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/papel"
                android:contentDescription="@string/papel"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
        </FrameLayout>
    </LinearLayout>

    <!-- Resultado das escolhas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sua_escolha"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvCPUChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/escolha_cpu"
            android:textSize="16sp"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <!-- Pontuação -->
    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voc_x_cpu_n0_0"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="48dp" />

    <!-- Botão Nova Partida -->
    <Button
        android:id="@+id/btnNovaPartida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nova_partida"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp" />

</LinearLayout>
