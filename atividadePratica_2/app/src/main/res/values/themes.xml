<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema padrão do aplicativo -->
    <style name="Theme.AtividadePratica2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/CustomButton</item> <!-- Define o estilo dos botões -->
    </style>

    <!-- Tema escuro, se necessário -->
    <style name="Theme.AtividadePratica2.Dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>
</resources>
